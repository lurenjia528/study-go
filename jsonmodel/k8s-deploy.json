{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {},
    "labels": {
      "microservice":"redis"
    },
    "name": "microservice-redis",
    "namespace": "kube-system"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "microservice":"redis"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "sidecar.istio.io/inject": "false"
        },
        "labels": {
          "microservice":"redis"
        },
        "namespace": "kube-system"
      },
      "spec": {
        "restartPolicy": "Always",
        "imagePullSecrets": [
          { "name": "myregistrykey"}
        ],
        "containers": [
          {
            "command":["/bin/sh"],
            "args":["-c","/redis/src/redis-server /redis/redis.conf && while true; do sleep 1000;done "],
            "image": "ygt/kube-system/redis:4.0.10",
            "imagePullPolicy": "IfNotPresent",
            "name": "microservice-redis",
            "ports": [
              {
                "containerPort": 6379,
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "tcpSocket": {
                "port": 6379
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 10,
              "timeoutSeconds": 10
            },
            "livenessProbe": {
              "tcpSocket": {
                "port": 6379
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 10,
              "timeoutSeconds": 10
            },
            "resources": {
              "limits": {
                "cpu": "50m"
              },
              "requests": {
                "memory": "512",
                "cpu": "0m"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "volumeMounts": [
              {
                "mountPath": "/redis/redis.conf",
                "name": "microservice-redis-0-volumemount",
                "readOnly": false
              },
              {
                "mountPath": "/var",
                "name": "microservice-redis-1-volumemount",
                "readOnly": false
              }
            ]
          }
        ],
        "nodeSelector": {
          "rack":"ft1500a"
        },
        "volumes": [
          {
            "hostPath": {
              "path": "/nas/microservice/redis-4.0.10/redis.conf",
              "type": "File"
            },
            "name": "microservice-redis-0-volumemount"
          },
          {
            "hostPath": {
              "path": "/nas/microservice/redis-4.0.10/var",
              "type": "Directory"
            },
            "name": "microservice-redis-1-volumemount"
          }
        ]
      }
    }
  }
}
