{
  "id": "/mesos/",
  "apps": [
    {
      "id": "/mesos/test",
      "cmd": "chmod 777 /tmp; /usr/sbin/apache2ctl -D FOREGROUND",
      "cpus": 4,
      "mem": 4096,
      "disk": 0,
      "instances": 1,
      "constraints": [
        [
          "rack",
          "CLUSTER",
          "ft1500a"
        ]
      ],
      "healthChecks": [
        {
          "protocol": "HTTP",
          "path": "/index.html",
          "portIndex": 0,
          "gracePeriodSeconds": 300,
          "intervalSeconds": 60,
          "timeoutSeconds": 20,
          "maxConsecutiveFailures": 3
        }
      ],
      "container": {
        "type": "DOCKER",
        "volumes": [
          {
            "containerPath": "/var/www/html/xxx",
            "hostPath": "/nas/cpk",
            "mode": "RW"
          },
          {
            "containerPath": "/var/www/html/share_cloud/config",
            "hostPath": "/nas/config",
            "mode": "RW"
          }
        ],
        "docker": {
          "image": "ygt/busybox:0.0.1",
          "network": "BRIDGE",
          "portMappings": [
            {
              "containerPort": 80,
              "hostPort": 0,
              "servicePort": 10028,
              "protocol": "tcp",
              "labels": {}
            },
            {
              "containerPort": 10025,
              "hostPort": 0,
              "servicePort": 10025,
              "protocol": "tcp",
              "labels": {}
            }
          ],
          "privileged": false,
          "parameters": [
            {
              "key": "cpu-quota",
              "value": "400000"
            }
          ],
          "forcePullImage": false
        }
      },
      "labels": {
        "HAPROXY_GROUP": "external"
      }
    }
  ]
}